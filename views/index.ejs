        <div id="contact-us">

            <div id="form-container">

                <h2>Request a Call Back</h2>
                <form action="submit" method="post">
                    <label for="name">Name:</label>
                    <input class="input" type="text" id="name" name="name" placeholder="e.g : Ram " required>

                    <label for="age">Age:</label>
                    <input class="input" type="number" id="age" name="age" placeholder="e.g : 19" required>

                    <label for="phone">Phone Number:</label>
                    <input class="input" type="tel" id="phone" name="phone" placeholder="e.g : +91 89267 63921"
                        required>
                    <!-- <small>Format: 1234567890</small> -->

                    <label for="email">Email ID:</label>
                    <input class="input" type="email" id="email" name="email" required>

                    <input id="button" type="submit" value="Submit">
                </form>

            </div>
        </div>
